
<div class="post_list">
  {{#if logged_in}}
    {{#each posts as |post| }}
      <div class="post">
        <h2>
          <!-- Call helper function with triple brackets to render the emoji span as HTML -->
          <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        <p class="date">{{format_date post.date_created}}</p>
      </div>
    {{/each}}
  {{else}}
    {{#each posts as |post| }}
      <div class="post">
        <h2>
          <!-- Call helper function with triple brackets to render the emoji span as HTML -->
          <p>{{post.title}}</p>
        </h2>
      </div>
    {{/each}}
  {{/if}}
  <!-- Loop over each object in the projects array -->

</div>
